<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/maincolor">

    <RelativeLayout
        android:id="@+id/RL_Header"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/btnProfileBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round_white_background_back"
            android:drawableTop="@drawable/ic_back"
            app:backgroundTint="@color/secondcolor"/>

        <TextView
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/I_Profile"
        android:layout_below="@id/RL_Header"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/tvProfileNama"
        android:layout_toRightOf="@id/I_Profile"
        android:layout_below="@id/RL_Header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/name_hint"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_toRightOf="@id/I_Profile"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tvProfileNama"
        android:text="@string/email_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvProfilepoints"
        android:layout_toRightOf="@id/I_Profile"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tvProfileEmail"
        android:layout_marginTop="5dp"
        android:text="@string/points"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_below="@id/I_Profile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/edit_profile"
        android:textAllCaps="false"
        android:textColor="#EA3138"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/secondcolor"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnProfileHistory"
        android:layout_below="@id/btnEditProfile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/secondcolor"
        android:drawableTop="@drawable/ic_history"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:text="@string/history"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btnProfileCoupons"
        android:layout_below="@id/btnEditProfile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/secondcolor"
        android:drawableTop="@drawable/ic_coupons"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="@string/coupons"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/btnProfileLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rectangle_buttonaddtocart"
        android:text="@string/logout"
        android:textAllCaps="false"
        app:backgroundTint="@color/redcolor" />

</RelativeLayout>