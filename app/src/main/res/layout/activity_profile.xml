<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/maincolor">

    <RelativeLayout
        android:id="@+id/RL_Header"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/B_Back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round_white_background_back"
            android:drawableTop="@drawable/ic_back"
            app:backgroundTint="@color/secondcolor"/>

        <TextView
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/I_Profile"
        android:layout_below="@id/RL_Header"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/Tv_Nama"
        android:layout_toRightOf="@id/I_Profile"
        android:layout_below="@id/RL_Header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="John John"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_Email"
        android:layout_toRightOf="@id/I_Profile"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Tv_Nama"
        android:text="email@email.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Tv_Points"
        android:layout_toRightOf="@id/I_Profile"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Tv_Email"
        android:layout_marginTop="5dp"
        android:text="150 Points"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/B_EditProfile"
        android:layout_below="@id/I_Profile"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="#EA3138"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/secondcolor"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/B_History"
        android:layout_below="@id/B_EditProfile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/secondcolor"
        android:drawableTop="@drawable/ic_history"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:text="History"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/B_Coupons"
        android:layout_below="@id/B_EditProfile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/secondcolor"
        android:drawableTop="@drawable/ic_coupons"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="Coupons"
        android:textAllCaps="false"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:background="@drawable/rectangle_buttonaddtocart"
        app:backgroundTint="@color/redcolor"
        android:text="Logout"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>