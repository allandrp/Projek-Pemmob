<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:text="@string/login"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/red_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEmailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:shadowColor="@color/red_main"
        android:text="@string/email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/red_main"
        android:textColorHint="@color/secondary_text"
        app:layout_constraintStart_toStartOf="@+id/id_txEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/id_txEmailLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/dr_gradient_edit_text"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailLogin" />

    <TextView
        android:id="@+id/textViewPwLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/password"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/red_main"
        android:textColorHint="@color/secondary_text"
        app:layout_constraintStart_toStartOf="@+id/id_txPwLogin"
        app:layout_constraintTop_toBottomOf="@+id/id_txEmailLogin" />

    <EditText
        android:id="@+id/id_txPwLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/dr_gradient_edit_text"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="@+id/id_txEmailLogin"
        app:layout_constraintStart_toStartOf="@+id/id_txEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/textViewPwLogin" />

    <Button
        android:id="@+id/id_btnLoginSignIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/red_orange_gradient_fullyrounded"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/id_txPwLogin"
        app:layout_constraintStart_toStartOf="@+id/id_txPwLogin"
        app:layout_constraintTop_toBottomOf="@+id/id_txPwLogin" />

    <Button
        android:id="@+id/id_btnLoginSignInGoogle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/red_orange_gradient_fullyrounded"
        android:text="@string/sign_in_with_google"
        android:textAllCaps="false"
        android:textColor="@color/red_main"
        android:textSize="15sp"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/id_btnLoginSignIn"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/id_btnLoginSignIn"
        app:layout_constraintTop_toBottomOf="@+id/id_btnLoginSignIn" />

    <TextView
        android:id="@+id/id_tvLoginRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/create_new_account_click_here"
        android:textColorLink="@color/purple_700"
        app:layout_constraintEnd_toEndOf="@+id/id_btnLoginSignInGoogle"
        app:layout_constraintStart_toStartOf="@+id/id_btnLoginSignInGoogle"
        app:layout_constraintTop_toBottomOf="@+id/id_btnLoginSignInGoogle" />

    <ProgressBar
        android:id="@+id/progressBarFoto"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>